{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": ["ES2017", "DOM", "DOM.Iterable"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "public/build",
    "rootDir": "public/Code"
  },
  "include": ["public/Code/**/*.ts"],
  "exclude": ["node_modules", "db"]
}
